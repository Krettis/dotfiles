#functions
alias wget='curl -O'
alias listports='lsof -i | grep LISTEN'
alias hidefiles='defaults delete com.apple.finder AppleShowAllFiles; killall -HUP Finder'
alias showfiles='defaults write com.apple.finder AppleShowAllFiles -boolean true; killall -HUP Finder'
alias ffprofile='/Applications/Firefox.app/Contents/MacOS/firefox-bin -p'
alias ..="cd .."


function test(){
DIR="$1"
 
if [ $# -ne 1 ]
then
	echo "Usage: $0 {dir-name}"
	exit 1
fi
 
if [ -d "$DIR" ]
then
	echo "$DIR directory  exists!"
else
	echo "$DIR directory not found!"
fi
}

#include welcome message
for item in ${startups[*]}
do
    printf "   %s\n" $item
. ~/$item
done



